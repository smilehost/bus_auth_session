generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma/auth_client"
}

datasource db {
  provider = "mysql"
  url      = env("AUTH_DATABASE_URL")
}

// Define your database models here and run `prisma migrate dev` to create migrations for your database.
model service {
  service_id     Int             @id @default(autoincrement())
  service_name   String          @unique
  onetime_tokens onetime_token[]
  auth_sessions  auth_session[]
  callback_url   String
  logout_url     String?
  created_at     DateTime        @default(now())
  updated_at     DateTime        @updatedAt
}

model onetime_token {
  token      String   @id
  service_id Int
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  service    service  @relation(fields: [service_id], references: [service_id], onDelete: Cascade)

  @@index([service_id])
}

model auth_session {
  session_id  String    @id
  service_id  Int
  user_id     Int
  user_agent  String?
  ip_address  String?
  expires_at  DateTime
  revoked_at  DateTime?
  replaced_by Int?
  created_at  DateTime  @default(now())
  updated_at  DateTime  @updatedAt
  service     service   @relation(fields: [service_id], references: [service_id], onDelete: Cascade)

  @@index([service_id])
}

model account {
  account_id       String   @id @default(uuid())
  account_username String   @db.VarChar(255)
  account_password String   @db.VarChar(255)
  account_name     String?  @db.VarChar(255)
  account_com_id   String?
  account_menu     String?  @db.VarChar(255)
  account_status   String?  @db.VarChar(50)
  account_role     Int?
  company          company? @relation(fields: [account_com_id], references: [com_id], onDelete: Cascade, map: "account_ibfk_1")

  @@index([account_com_id], map: "account_com_id")
}

model company {
  com_id     String    @id @default(uuid())
  com_name   String    @db.VarChar(255)
  com_prefix String?   @db.VarChar(100)
  com_status Int?
  account    account[]
}
